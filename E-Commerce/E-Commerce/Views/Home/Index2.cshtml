@model List<E_Commerce.Models.Product>

@{
    /**/

    ViewBag.Title = "Index2";
}

<!-- Latest Products -->
<div class="products">
    <h2>Latest Products</h2>

    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="product-holder">
            <div class="product">
                <a title="Details" href="@Url.Action("Detail", "Product", new { id = Model[i].ProductID }, null)">
                    <img src="~/css/images/product/@Model[i].ProductImg" alt="product img" />
                </a>
                @if (i == 1)
                {
                    <img class="sale-label" src="~/css/images/sale-label.png" alt="Sale!" />
                }
                <p>Case Model</p>
            </div>

            <p>@Model[i].ProductName</p>
            <div class="price-label">
                <strike>$117.50</strike>
                <p class="price">@Model[i].Price</p>
            </div>
        </div>
    }

    <div class="cl"></div>
</div>
<!-- END Latest Products -->
<!-- Feartured Products -->
<div class="products featured">
    <h2>Featured Products</h2>
    <div class="products-slider">
        <ul>
            @foreach (var pro in ViewBag.featureProducts)
            {
                <li>
                    <a title="Details" href="@Url.Action("Detail", "Product", new { id = pro.ProductID }, null)"><img src="~/css/images/product/@pro.ProductImg" alt="" /></a>
                    <p>@pro.ProductName</p>
                </li>
            }            
        </ul>
    </div>
</div>
<!-- END Featured Products -->
